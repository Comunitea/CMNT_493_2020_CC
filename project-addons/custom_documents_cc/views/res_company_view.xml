<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_company_form_documents" model="ir.ui.view">
        <field name="name">view_company_form_documents</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Contract Text">
                    <group string="Contract Text">
                        <field name="contract_text" nolabel="1"/>
                    </group>
                    <group string="Legal Text">
                        <field name="legal_text" nolabel="1"/>
                    </group>
                    <group string="Recoverable Text">
                        <field name="recoverable_text" widget="html" nolabel="1"/>
                    </group>
                    <group string="Recoverable Text 2">
                        <field name="recoverable_text2" widget="html" nolabel="1"/>
                    </group>
                </page>
                <page string="Custom Reports">
                    <group string="Custom reports">
                        <field name="police_report_logo"  widget="image"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
