<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cc_purchase_order_form" model="ir.ui.view">
        <field name="name">cc.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="view_lots_button" type="object" class="oe_stat_button" icon="fa-list">
                    <field name="count_lots"  widget="statinfo"/>
                </button>
            </div>

            <field name="company_id" position="after">
                <field name="recoverable_sale"/>
                <field name="deposit_sale"/>
            </field>


            <!-- Avoid editable in tree view -->
            <xpath expr="//field[@name='order_line']//tree" position="attributes">
                <attribute name="editable"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='date_planned']" position="after">
                <field name="recoverable_sale"/>
                <field name="deposit_sale"/>
                <field name="limit_date" attrs="{
                    'invisible': [('recoverable_sale', '=', False),('deposit_sale', '=', False)],
                    'required':  ['|', ('recoverable_sale', '!=', False),('deposit_sale', '!=', False)]}"/>
                <field name="police_date"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form/group/group[2]" position="after">
                    <group string="Product Info">
                        <field name="ean13"/>
                        <field name="brand"/>
                        <field name="model"/>
                        <field name="id_product"/>
                        <field name="sale_price"/>
                        <field name="purchase_price_15"/>
                        <field name="purchase_price_30"/>
                        <field name="purchase_price_60"/>
                    </group>
                    <group string="Attributes">
                        <field name="attribute_line_ids" widget="one2many" context="{'show_attribute': False}" nolabel="1">
                            <tree string="Attributes" editable="bottom">
                                <!-- <field name="attribute_id" attrs="{'readonly': [('id', '!=', False)]}" context="{'limit_attributes_product': parent.product_id}"/> -->
                                <field name="attribute_id"  context="{'limit_attributes_product': parent.product_id}"/>
                                <field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}" context="{'default_attribute_id': attribute_id, 'show_attribute': False}"/>
                            </tree>
                        </field>
                    </group>
            </xpath>

            <!-- IMAGE TABS -->
            <xpath expr="//field[@name='order_line']//form//notebook" position="inside">
                <page string="Add Images">
                    <group>
                        <button name="copy_image_to_lots" string="Copy image to related lots" type="object" class="oe_link"/>
                        <field name="multi_image_ids" widget="many2many_binary" string="Attach a file" nolabel="1" colspan="2" />
                    </group>
                </page>
                <page string="Images">
                        <group>
                            <field
                                name="image_ids"
                                nolabel="1"
                                context="{
                                    'default_owner_model': 'stock.production.lot',
                                    'default_owner_id': id,
                                }"
                                readonly="1"
                                mode="kanban"/>
                        </group>
                </page>     
            </xpath>

            <!-- Cantidad de odo standard invisible y usamos lost_Qty -->
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_qty']" position="replace">
                <field name="product_qty" invisible="1"/>
                <field name="lot_qty" string="Quantity"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='product_qty']" position="replace">
                <field name="product_qty" invisible="1"/>
                <field name="lot_qty" string="Quantity"/>
            </xpath>

            <!-- Campo precio etiqueta gÃ©nerica -->
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="attributes">
                <attribute name="string">Price</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='price_unit']" position="attributes">
                <attribute name="string">Price</attribute>
            </xpath>

        </field>
    </record>

    <record id="action_purchase_line" model="ir.actions.act_window">
        <field name="name">Purchase Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="purchase.purchase_order_line_tree"/>
        <!-- <field name="domain">[('state','in',('purchase', 'done'))]</field> -->
        <!-- <field name="search_view_id" ref="purchase_order_view_search"/> -->
        <!-- <field name="context">{}</field> -->
        <!-- <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a quotation
            </p><p>
            It will be converted into a purchase order.
            </p>
        </field> -->
    </record>
     <menuitem action="action_purchase_line" id="menu_purchase_line"
            parent="purchase.menu_procurement_management"
            sequence="90"/>
    <record id="cc_sale_lot_tree_custom" model="ir.ui.view">
        <field name="name">cc_sale_lot_tree_custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_lot_selection.view_order_tree_lot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='lot_id']" position="replace">
                <field name="lot_id" domain="[('product_id','=', product_id), ('salable', '=', True)]" context="{'default_product_id': product_id}" groups="stock.group_production_lot"/>
            </xpath>
            
        </field>
    </record>

</odoo>
