<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="view_change_lot_state" model="ir.ui.view">
            <field name="name">Change Lot State</field>
            <field name="model">change.lot.state.wzd</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="lot_state_orig"/>
                        <field name="lot_state_dest"/>
                    </group>
                    <footer>
                        <button
                        name="confirm"
                        string="Confirm"
                        type="object"
                        class="btn-primary"
                    />
                        <button
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                    />
                    </footer>
                </form>
            </field>
        </record>
